{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "~/*": ["src/*"],
      "*": ["types/*.d.ts"]
    },
    "types": ["@types/node"]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "meta.ts"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ],
  "exclude": ["src/main/test/cypress"]
}
