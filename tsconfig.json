{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src"],
      "*": ["types/*.d.ts"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "api/trainer/utils/session.ts",
    "api/connectToDatabase.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
